//Calisan
public class Calisan extends Kisi{
    
    private int maas;
    public Calisan(String isim, int maas) {
        super(isim);
        this.maas = maas;
    }

    public int getMaas() {
        return maas*2;
    }

    public void setMaas(int maas) {
        this.maas = maas;
    }
    
    @Override
    public String toString(){
        return "Çalışan: " +this.getIsim()+"(Ücret:"+getMaas()+")";
    }
}

	


//Kisi
public class Kisi {
    private String isim;

 
    public String getIsim() {
        return isim;
    }
    
    public Kisi(String isim){
        this.isim = isim;
    }
    
    @Override
    public String toString(){
        return isim;
    }
}

//Yönetici
public class Yonetici extends Calisan {
    
    private int bonus;
    public Yonetici(String isim, int maas) {
        super(isim, maas);
    }

   
    public int getBonus() {
        return bonus;
    }

    public void setBonus(int bonus) {
        this.bonus = bonus / 2;
    }
    
    @Override   
    public int getMaas() {
        return super.getMaas() + getBonus();
    }
    @Override
    public String toString(){
        return "Yönetici: "+this.getIsim()+"(Ücret:"+getMaas()+")";
    }
    
}

//Sirket

import java.util.ArrayList;

public class Sirket {
    public static void main(String[] args) {
        ArrayList<Kisi> kisiler = new ArrayList<>();
        
        kisiler.add(new Calisan("Özcan", 2125));
        kisiler.add(new Calisan("Mehmet", 2170));
        kisiler.add(new Calisan("Edis", 2235));
        kisiler.add(new Calisan("Ronaldo", 1250));
        
        Yonetici yonetici = new Yonetici("Ömer", 3200);
        yonetici.setBonus(100);
        kisiler.add(yonetici);
        
        for (Kisi kisi : kisiler) {
            System.out.println(kisi);
        }
    }
}





